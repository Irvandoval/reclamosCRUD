<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.irvandoval.reclamosgrupo17.prodserv.ProdServInsertarActivity">

    <TextView android:text="@string/idProdServ" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/textView46"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/idProdServ"
        android:layout_toStartOf="@+id/idProdServ"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/idProdServ"
        android:layout_alignBottom="@+id/textView46"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/nombreCatPS"
        android:id="@+id/textView47"
        android:layout_marginBottom="57dp"
        android:layout_above="@+id/descripcionProdServ"
        android:layout_alignLeft="@+id/textView46"
        android:layout_alignStart="@+id/textView46" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/nombreProdServ"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/textView47"
        android:layout_alignBottom="@+id/textView47"
        android:layout_toRightOf="@+id/button29"
        android:layout_toEndOf="@+id/button29" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/descripcionCatPS"
        android:id="@+id/textView48"
        android:layout_alignBaseline="@+id/descripcionProdServ"
        android:layout_alignBottom="@+id/descripcionProdServ"
        android:layout_alignRight="@+id/textView47"
        android:layout_alignEnd="@+id/textView47" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descripcionProdServ"
        android:layout_above="@+id/button30"
        android:layout_alignLeft="@+id/nombreProdServ"
        android:layout_alignStart="@+id/nombreProdServ" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insertar_boton"
        android:id="@+id/button29"
        android:onClick="insertarProdServInsertar"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limpiar_boton"
        android:id="@+id/button30"
        android:layout_alignTop="@+id/button29"
        android:layout_alignRight="@+id/descripcionProdServ"
        android:layout_alignEnd="@+id/descripcionProdServ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Categoria_Prod_Serv"
        android:id="@+id/textView44"
        android:layout_below="@+id/idProdServ"
        android:layout_alignLeft="@+id/textView46"
        android:layout_alignStart="@+id/textView46"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IdCategoriaPServ"
        android:layout_alignBottom="@+id/textView44"
        android:layout_alignLeft="@+id/button30"
        android:layout_alignStart="@+id/button30"
        android:layout_alignRight="@+id/idProdServ"
        android:layout_alignEnd="@+id/idProdServ" />

    <Button
        android:id="@+id/mainbttomarfotoprodserv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/adjuntarfoto"
        android:layout_below="@+id/descripcionProdServ"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
