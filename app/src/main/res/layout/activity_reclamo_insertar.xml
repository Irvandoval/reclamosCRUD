<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.irvandoval.reclamosgrupo17.reclamo.ReclamoInsertarActivity"
    android:nestedScrollingEnabled="false">

    <TextView android:text="@string/Titulo" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView8" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:id="@+id/TituloReclamo"
        android:inputType="text"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/motivo"
        android:id="@+id/motivoReclamo"
        android:layout_below="@+id/TituloReclamo"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/MotivoReclamo"
        android:layout_alignTop="@+id/motivoReclamo"
        android:layout_alignLeft="@+id/TituloReclamo"
        android:layout_alignStart="@+id/TituloReclamo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Fecha"
        android:id="@+id/textfec"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/MotivoReclamo"
        android:layout_alignRight="@+id/motivoReclamo"
        android:layout_alignEnd="@+id/motivoReclamo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:id="@+id/Insertar"
        android:layout_alignLeft="@+id/motivoReclamo"
        android:layout_alignStart="@+id/motivoReclamo"
        android:layout_marginTop="24dp"
        android:layout_alignTop="@+id/textfec" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:id="@+id/limpiar1"
        android:onClick="limpiarTexto1"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_alignTop="@+id/Insertar"
        android:layout_alignRight="@+id/TituloReclamo"
        android:layout_alignEnd="@+id/TituloReclamo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/fechaReclamo"
        android:layout_alignBottom="@+id/textfec"
        android:layout_toRightOf="@+id/Insertar"
        android:layout_toEndOf="@+id/Insertar"
        android:hint="@string/formatofec" />

</RelativeLayout>
