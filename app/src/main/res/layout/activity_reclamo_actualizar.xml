<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.irvandoval.reclamosgrupo17.reclamo.ReclamoActualizarActivity">

    <TextView android:text="@string/Titulo" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:id="@+id/editText"
        android:inputType="text"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/motivo"
        android:id="@+id/textView10"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/MotivoReclamo"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Fecha"
        android:id="@+id/textView11"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/MotivoReclamo"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignLeft="@+id/MotivoReclamo"
        android:layout_alignStart="@+id/MotivoReclamo"
        android:hint="@string/formatofec" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualizar_boton"
        android:id="@+id/button4"
        android:layout_below="@+id/editText2"
        android:layout_toLeftOf="@+id/editText2"
        android:layout_toStartOf="@+id/editText2"
        android:layout_marginTop="19dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limpiar_boton"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignRight="@+id/MotivoReclamo"
        android:layout_alignEnd="@+id/MotivoReclamo"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:onClick="limpiarTexto1" />

</RelativeLayout>
