<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.irvandoval.reclamosgrupo17.estadoreclamo.EstadoReclamoActualizarActivity"
    android:id="@+id/actualizar">

    <TextView android:text="@string/estadoReclamo_nombre" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/editDescripcionEstado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editNombreEstado"
        android:layout_alignBottom="@+id/textView28"
        android:layout_toRightOf="@+id/button15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:text="@string/estadoReclamo_Descripcion" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView29"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView28"
        android:layout_alignStart="@+id/textView28" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editDescripcionEstado"
        android:layout_alignBottom="@+id/textView29"
        android:layout_alignLeft="@+id/editNombreEstado"
        android:layout_alignStart="@+id/editNombreEstado"
        android:layout_alignRight="@+id/editNombreEstado"
        android:layout_alignEnd="@+id/editNombreEstado" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualizar"
        android:id="@+id/button15"
        android:onClick="actualizarEstadoReclamo"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView28"
        android:layout_toEndOf="@+id/textView28" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limpiar_boton"
        android:id="@+id/button16"
        android:layout_marginBottom="83dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editDescripcionEstado"
        android:layout_alignEnd="@+id/editDescripcionEstado"
        android:onClick="limpiarTexto"/>

    <TextView
        android:text="@string/estadoReclamo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView52"
        android:layout_above="@+id/editNombreEstado"
        android:layout_alignRight="@+id/textView28"
        android:layout_alignEnd="@+id/textView28" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editEstadoId"
        android:layout_above="@+id/editNombreEstado"
        android:layout_alignLeft="@+id/editNombreEstado"
        android:layout_alignStart="@+id/editNombreEstado"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consultar_boton"
        android:id="@+id/button39"
        android:layout_alignBottom="@+id/button16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="consultarEstadoReclamo" />

</RelativeLayout>
