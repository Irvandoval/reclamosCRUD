<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.irvandoval.reclamosgrupo17.detallereclamo.DetalleReclamoConsultarActivity"
    android:id="@+id/icon">

    <TextView android:text="@string/detalle_Descripcion" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:layout_alignBottom="@+id/editDescripcionDetalle"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editDescripcionDetalle"
        android:layout_below="@+id/editProServ"
        android:layout_alignLeft="@+id/editProServ"
        android:layout_alignStart="@+id/editProServ"
        android:layout_marginTop="61dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/detalle_id"
        android:id="@+id/textView"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editDetalle_id"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView28"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consultar_boton"
        android:id="@+id/btnConsultar"
        android:onClick="consultarDetalle"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/imageButton2"
        android:layout_toLeftOf="@+id/editDetalle_id"
        android:layout_toStartOf="@+id/editDetalle_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limpiar_boton"
        android:id="@+id/button16"
        android:onClick="limpiarTexto"
        android:layout_alignTop="@+id/btnConsultar"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView44"
        android:text="@string/idProdServ"
        android:layout_below="@+id/button16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editProServ"
        android:layout_alignTop="@+id/textView44"
        android:layout_alignRight="@+id/editDetalle_id"
        android:layout_alignEnd="@+id/editDetalle_id" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@mipmap/button_icon"
        android:onClick="busquedaPorVoz"
        android:layout_alignTop="@+id/editDetalle_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>